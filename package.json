{
  "name": "basic-typescript-setup",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:beaumontjonathan/basic-typescript-setup.git",
  "author": "beaumontjonathan <beaumont_jonny@hotmail.co.uk>",
  "license": "MIT",
  "scripts": {
    "clean:build": "rm -rf ./build/*",
    "build:ts": "yarn tsc",
    "build:js": "babel ./src --out-dir build --source-maps --extensions \".ts,.tsx\"",
    "build": "yarn clean:build && yarn build:ts && yarn build:js",
    "clean:dist": "rm -rf ./dist/*",
    "dist:js": "babel ./src --out-dir dist --extensions \".ts,.tsx\"",
    "dist": "yarn clean:dist && yarn dist:js",
    "test": "jest",
    "start": "nodemon -x ts-node src/index.ts",
    "generate": "gql-gen",
    "precommit": "graphql-inspector introspect src/schema/index.ts --write schema.graphql --require ts-node/register/transpile-only && git add schema.graphql"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.5",
    "graphql-code-generator": "^0.18.1",
    "graphql-codegen-typescript-common": "^0.18.1",
    "graphql-codegen-typescript-resolvers": "^0.18.1",
    "graphql-codegen-typescript-server": "^0.18.1",
    "graphql-inspector": "^0.5.1",
    "jest": "^24.7.1",
    "typescript": "^3.4.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "knex": "^0.16.5",
    "lodash": "^4.17.11",
    "moment": "^2.29.2",
    "mysql": "^2.17.1",
    "nodemon": "^1.18.11",
    "ts-node": "^8.1.0"
  }
}
