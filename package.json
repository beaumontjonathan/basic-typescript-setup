{
  "name": "basic-typescript-setup",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:beaumontjonathan/basic-typescript-setup.git",
  "author": "beaumontjonathan <beaumont_jonny@hotmail.co.uk>",
  "license": "MIT",
  "scripts": {
    "clean:build": "rm -rf ./build/*",
    "build:ts": "yarn tsc",
    "build:js": "babel ./src --out-dir build --source-maps --extensions \".ts,.tsx\"",
    "build": "yarn clean:build && yarn build:ts && yarn build:js",
    "clean:dist": "rm -rf ./dist/*",
    "dist:js": "babel ./src --out-dir dist --extensions \".ts,.tsx\"",
    "dist": "yarn clean:dist && yarn dist:js",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.15",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "jest": "^24.8.0",
    "typescript": "^3.5.2",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "knex": "^0.18.1"
  }
}
